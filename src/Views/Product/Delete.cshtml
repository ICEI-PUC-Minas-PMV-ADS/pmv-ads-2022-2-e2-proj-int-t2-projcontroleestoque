@model ProjControleEstoque.Models.Product

@{
    ViewData["Title"] = "Deletar";
}
<div class="formu p-3">
    <h3>Você tem certeza que deseja excluir o Produto?</h3>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Localizacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Localizacao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tags)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tags)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstrategiaConsumo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstrategiaConsumo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Criado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Criado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Validade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Validade)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Excluir" class="btn btn-danger" id="del-btn" />
            <a class="btn btn-secondary" asp-action="Index" id="back-btn">
                Voltar
            </a>
        </div>
    </form>
</div>
